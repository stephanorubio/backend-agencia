generator client {
  provider = "prisma-client-js"
  // Esto ayuda a reducir memoria en la generaci«Ñn
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agency {
  id        String   @id @default(uuid())
  name      String
  logo      String?  @db.Text  
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  users     User[]
  clients   Client[]
  wallet    Wallet?
  employees      Employee[]
}

model Employee {
  id        String   @id @default(uuid())
  name      String
  cedula    String?
  email     String   @unique
  password  String
  role      String   @default("VIEWER")
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("AGENCY_ADMIN")
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id])
}

model Wallet {
  id        String   @id @default(uuid())
  balance   Decimal  @default(0.00)
  agencyId  String   @unique
  agency    Agency   @relation(fields: [agencyId], references: [id])
}

model Client {
  id          String   @id @default(uuid())
  name        String
  logo        String?  @db.Text  
  contactName String?
  email       String?
  adAccountId String?
  password    String   @default("$2a$10$EpRnTzVlqHNP0.fkbpo9kul.kUM.dF.w.k.d.w.k.d.w.k.d.w.k.")
  credentials Credential[]
  agencyId    String
  agency      Agency   @relation(fields: [agencyId], references: [id])
  createdAt   DateTime @default(now())
  
}
// --- GESTOR DE CONTRASEÑAS (WALLET) ---

model Credential {
  id             String   @id @default(uuid())
  serviceName    String   // Ej: Facebook Ads, Gmail, cPanel
  type           String   // Ej: SOCIAL, SERVER, EMAIL, API
  username       String?
  // DATOS ENCRIPTADOS
  encryptedData  String   @db.Text // La contraseña encriptada
  iv             String   // Vector de inicialización (necesario para desencriptar)
  
  notes          String?
  clientId       String
  client         Client   @relation(fields: [clientId], references: [id])
  
  logs           CredentialLog[]
  createdAt      DateTime @default(now())
}

model CredentialLog {
  id           String     @id @default(uuid())
  action       String     // Ej: VIEWED, COPIED, SHARED_LINK_CREATED
  userEmail    String     // Quién lo hizo (puede ser Admin, Agencia o Empleado)
  ipAddress    String?
  credentialId String
  credential   Credential @relation(fields: [credentialId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
}

model MagicLink {
  id           String   @id @default(uuid())
  token        String   @unique // El código secreto del link
  credentialId String   // Qué contraseña muestra
  expiresAt    DateTime // Cuándo muere el link
  used         Boolean  @default(false) // Si es de un solo uso
  createdAt    DateTime @default(now())
}
