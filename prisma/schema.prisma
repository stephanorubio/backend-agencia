generator client {
  provider = "prisma-client-js"
  // Esto ayuda a reducir memoria en la generaci«Ñn
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agency {
  id        String   @id @default(uuid())
  name      String
  logo      String?  @db.Text  
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  users     User[]
  clients   Client[]
  wallet    Wallet?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("AGENCY_ADMIN")
  agencyId  String
  agency    Agency   @relation(fields: [agencyId], references: [id])
}

model Wallet {
  id        String   @id @default(uuid())
  balance   Decimal  @default(0.00)
  agencyId  String   @unique
  agency    Agency   @relation(fields: [agencyId], references: [id])
}

model Client {
  id          String   @id @default(uuid())
  name        String
  logo        String?  @db.Text  
  contactName String?
  email       String?
  adAccountId String?
  password    String   @default("$2a$10$EpRnTzVlqHNP0.fkbpo9kul.kUM.dF.w.k.d.w.k.d.w.k.d.w.k.")
  agencyId    String
  agency      Agency   @relation(fields: [agencyId], references: [id])
  createdAt   DateTime @default(now())
}
